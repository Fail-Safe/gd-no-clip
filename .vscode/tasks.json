{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Geode: Build (Release)",
            "type": "shell",
            "command": "geode build --release",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GEODE_SDK": "${workspaceFolder}/.geode-sdk"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Geode: Install SDK Binaries (MacOS 4.7.0)",
            "type": "shell",
            "command": "geode sdk install-binaries --platform MacOS -v 4.7.0",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GEODE_SDK": "${workspaceFolder}/.geode-sdk"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure (Release)",
            "type": "shell",
            "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GEODE_SDK": "${workspaceFolder}/.geode-sdk"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build (Release)",
            "type": "shell",
            "command": "cmake --build build --config Release -j",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Configure (Release)",
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        }
    ]
}