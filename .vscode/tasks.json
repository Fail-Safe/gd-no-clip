{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Geode: Build (Release)",
            "type": "shell",
            "command": "geode build --config Release",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GEODE_SDK": "${workspaceFolder}/.geode-sdk"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Geode: Install SDK Binaries (MacOS 4.7.0)",
            "type": "shell",
            "command": "geode sdk install-binaries --platform MacOS -v 4.7.0",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GEODE_SDK": "${workspaceFolder}/.geode-sdk"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure (Release)",
            "type": "shell",
            "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "GEODE_SDK": "${workspaceFolder}/.geode-sdk"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build (Release)",
            "type": "shell",
            "command": "cmake --build build --config Release -j",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Configure (Release)",
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "label": "Geode: Windows Build Script (PowerShell)",
            "type": "shell",
            "command": "pwsh -ExecutionPolicy Bypass -File scripts/build-windows-release.ps1",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Geode: Windows Build Script (BAT)",
            "type": "shell",
            "command": "scripts/build-windows-release.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Preset (windows-release)",
            "type": "shell",
            "command": "cmake --build --preset windows-release",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Preset (windows-ninja-release)",
            "type": "shell",
            "command": "cmake --build --preset windows-ninja-release",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Geode: Windows Debug Script (PowerShell)",
            "type": "shell",
            "command": "pwsh -ExecutionPolicy Bypass -File scripts/build-windows-debug.ps1",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Geode: Windows Debug Script (BAT)",
            "type": "shell",
            "command": "scripts/build-windows-debug.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Preset (windows-debug)",
            "type": "shell",
            "command": "cmake --build --preset windows-debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Preset (windows-ninja-debug)",
            "type": "shell",
            "command": "cmake --build --preset windows-ninja-debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}